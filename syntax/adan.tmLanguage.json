{
  "scopeName": "source.adan",
  "name": "ADAN",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#comments" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        { "match": "\\b(include|return|while|true)\\b", "name": "keyword.control.adan" },
        { "match": "\\b(program::int|program::void)\\b", "name": "keyword.type.adan" }
      ]
    },
    "types": {
      "patterns": [
        { "match": "\\b(int|string|void)\\b", "name": "storage.type.adan" }
      ]
    },
    "functions": {
      "patterns": [
        { "match": "\\b(print|print_int|read_file_source|write_file_source|main|test)\\b", "name": "entity.name.function.adan" }
      ]
    },
    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.adan" } },
          "end": "\"",
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.adan" } },
          "name": "string.quoted.double.adan",
          "patterns": [
            { "include": "#interpolation" },
            { "match": "\\\\.", "name": "constant.character.escape.adan" }
          ]
        }
      ]
    },
    "interpolation": {
      "patterns": [
        {
          "begin": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.adan" } },
          "end": "\"",
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.adan" } },
          "name": "string.quoted.double.adan",
          "patterns": [
            { "include": "#interpolation" },
            { "match": "\\\\.", "name": "constant.character.escape.adan" }
          ]
        },
        {
          "begin": "(\\$\\{)",
          "beginCaptures": { "1": { "name": "punctuation.section.embedded.begin.adan punctuation.definition.interpolation.begin.adan" } },
          "end": "(\\})",
          "endCaptures": { "1": { "name": "punctuation.section.embedded.end.adan punctuation.definition.interpolation.end.adan" } },
          "name": "meta.interpolation.adan",
          "patterns": [
            { "include": "#keywords" },
            { "include": "#types" },
            { "include": "#functions" },
            { "include": "#numbers" },
            { "match": "\\b[A-Za-z_$][A-Za-z0-9_$]*\\b", "name": "variable.other.adan" },
            { "include": "#interpolation" },
            { "match": "[()=+\\-/*%!<>]", "name": "keyword.operator.adan" }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "match": "\\b\\d+\\b", "name": "constant.numeric.adan" }
      ]
    },
    "comments": {
      "patterns": [
        { "match": "//.*$", "name": "comment.line.double-slash.adan" }
      ]
    }
  }
}