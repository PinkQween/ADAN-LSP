{
  "scopeName": "source.adan",
  "name": "ADAN",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#variable-declarations" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#variables" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        { "match": "\\b(include|return|while|true|false)\\b", "name": "keyword.control.adan" },
        { "match": "\\b(program)::", "name": "keyword.other.adan" }
      ]
    },
    "types": {
      "patterns": [
        { "match": "\\b(int|string|void)\\b", "name": "storage.type.adan" }
      ]
    },
    "functions": {
      "patterns": [
        { 
          "match": "\\b(print|print_int|read_file_source|write_file_source|main|test)\\s*(?=\\()", 
          "name": "entity.name.function.adan" 
        }
      ]
    },
    "variable-declarations": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)::(int|string|void)\\b",
          "captures": {
            "1": { "name": "variable.other.adan" },
            "2": { "name": "storage.type.adan" }
          }
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.template",
      "begin": "\"",
      "end": "(\")|((?=[^\\\\]\\n))",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.string.end" }
      },
      "patterns": [
        {
          "name": "meta.template.expression",
          "begin": "\\$\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.template-expression.begin" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.template-expression.end" }
          },
          "patterns": [
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#functions" },
            { "include": "#keywords" },
            { "include": "#operators" },
            { "match": "\\(", "name": "punctuation.section.parens.begin.adan" },
            { "match": "\\)", "name": "punctuation.section.parens.end.adan" },
            { "match": "\\[", "name": "punctuation.section.brackets.begin.adan" },
            { "match": "\\]", "name": "punctuation.section.brackets.end.adan" },
            { "match": ",", "name": "punctuation.separator.adan" },
            {
              "name": "variable.other.adan",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            }
          ]
        },
        {
          "name": "constant.character.escape",
          "match": "\\\\[nrt\"\\\\]"
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "match": "\\b\\d+\\b", "name": "constant.numeric.adan" }
      ]
    },
    "comments": {
      "patterns": [
        { "match": "//.*$", "name": "comment.line.double-slash.adan" },
        { "begin": "/\\*", "end": "\\*/", "name": "comment.block.adan" }
      ]
    },
    "operators": {
      "patterns": [
        { "match": "\\+\\+|--|[+\\-*/%^]=|[+\\-*/%^]|[=<>!]=|&&|\\|\\||[<>]", "name": "keyword.operator.adan" }
      ]
    },
    "variables": {
      "patterns": [
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "variable.other.adan"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        { "match": "\\(", "name": "punctuation.section.parens.begin.adan" },
        { "match": "\\)", "name": "punctuation.section.parens.end.adan" },
        { "match": "\\[", "name": "punctuation.section.brackets.begin.adan" },
        { "match": "\\]", "name": "punctuation.section.brackets.end.adan" },
        { "match": "\\{", "name": "punctuation.section.braces.begin.adan" },
        { "match": "\\}", "name": "punctuation.section.braces.end.adan" },
        { "match": ";", "name": "punctuation.terminator.adan" },
        { "match": ",", "name": "punctuation.separator.adan" }
      ]
    },
    "expression": {
      "patterns": [
        { "include": "#numbers" },
        { "include": "#functions" },
        { "include": "#keywords" },
        { "include": "#operators" },
        { "match": "\\+\\+|--|[+\\-*/%^]=|[+\\-*/%^]|[=<>!]=|&&|\\|\\||[<>]", "name": "keyword.operator.adan" }
      ]
    }
  }
}